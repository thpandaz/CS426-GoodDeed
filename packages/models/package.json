{
  "name": "@repo/models",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "tsc && tsup",
    "clean": "rm -rf dist",
    "dev": "tsc -w",
    "lint": "eslint \"src/**/*.ts*\" --max-warnings 0",
    "test": "jest"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "http-status-codes": "^2.3.0",
    "zod": "^3.24.2",
    "tsup": "^8.4.0"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "outDir": "dist",
    "format": ["esm", "cjs"],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  }
}